{
    "compilerOptions": {
        "target": "es2016",
        "module": "CommonJS",
        "typeRoots": [
            "app/@types",
            "./node_modules/@types"
        ],
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "app/**/*.ts", // <-- DENNE ER NY (Inkluderer hele app-mappen)
        "api/**/*.ts"  // <-- DENNE ER NY (Inkluderer api-mappen)
    ]
}
